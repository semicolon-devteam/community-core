{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@components/*": ["./lib/components/*"],
      "@hooks/*": ["./lib/hooks/*"],
      "@services/*": ["./lib/services/*"],
      "@utils/*": ["./lib/utils/*"],
      "@types/*": ["./lib/types/*"],
      "@redux/*": ["./lib/redux/*"],
      "@config/*": ["./lib/config/*"],
      "@constants/*": ["./lib/constants/*"]
    }
  },
  "include": [
    "lib/index.ts",
    "lib/utils/**/*",
    "lib/types/User/index.ts",
    "lib/types/common.ts",
    "lib/config/init.ts",
    "lib/constants/index.ts",
    "lib/components/atoms/Button/**/*",
    "lib/components/atoms/Badge/**/*",
    "lib/components/atoms/Avatar/**/*",
    "lib/components/atoms/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts", 
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "lib/utils/sessionTestUtils.ts",
    "lib/config/axios.ts",
    "lib/config/Supabase/**/*"
  ]
}